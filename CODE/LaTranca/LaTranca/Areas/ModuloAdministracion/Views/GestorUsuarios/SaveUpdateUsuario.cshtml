@model LaTranca.Dominio.DTO.LaTranca.TR_USUARIO

@{
    ViewBag.Title = "SaveUpdateUsuario";
    Layout = "~/Views/Shared/Modulos/_LayoutAdminLaTranca.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Gestión de Usuarios</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/ModuloAdministracion/GestorUsuarios/Index">Inicio</a>
            </li>
            <li>
                <a href="/ModuloAdministracion/GestorUsuarios/Index">Usuarios</a>
            </li>
            <li class="active">
                <strong>Editar/Ingresar</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a data-toggle="tab" href="#tab-1"> Información</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            @using (Html.BeginForm("SaveUpdateUsuario", "GestorUsuarios", FormMethod.Post, new { @Name = "form-usuario", @id = "form-usuario" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.USER_ID)
                                @Html.HiddenFor(m => m.AspNetUsers_Id)

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.USER_NOMBRES, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.USER_NOMBRES, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.USER_NOMBRES, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.USER_APE_PATERNO, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.USER_APE_PATERNO, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.USER_APE_PATERNO, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.USER_APE_MATERNO, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.USER_APE_MATERNO, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.USER_APE_MATERNO, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.USER_TIPO_DOCUMENTO, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <select name="USER_TIPO_DOCUMENTO" id="USER_TIPO_DOCUMENTO" class="form-control">
                                                @switch (Model.USER_TIPO_DOCUMENTO)
                                                {
                                                    case 1:
                                                        <option value="1" selected>DNI</option>
                                                        <option value="2">RUC</option>
                                                        <option value="2">Carnet de Extranjero</option>
                                                        break;
                                                    case 2:
                                                        <option value="1">DNI</option>
                                                        <option value="2" selected>RUC</option>
                                                        <option value="2">Carnet de Extranjero</option>
                                                        break;
                                                    case 3:
                                                        <option value="1">DNI</option>
                                                        <option value="2">RUC</option>
                                                        <option value="2" selected>Carnet de Extranjero</option>
                                                        break;
                                                }
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.USER_NUM_DOCUMENTO, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.USER_NUM_DOCUMENTO, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.USER_NUM_DOCUMENTO, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.USER_TELEFONO, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.USER_TELEFONO, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.USER_TELEFONO, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.USER_CELULAR, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.USER_CELULAR, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.USER_CELULAR, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.USER_DIRECCION, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.USER_DIRECCION, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.USER_DIRECCION, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.USER_CORREO, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.USER_CORREO, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.USER_CORREO, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            @if (ViewBag.accion == 0)
                                            {
                                                <input type="button" value="Guardar" id="btnSaveUpdateUsuario" class="btn btn-success btn-lg" />
                                            }
                                            else
                                            {
                                                <input type="button" value="Retroceder" id="btnRetrocederUsuarios" class="btn btn-info btn-lg" />
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Areas/ModuloAdministracion/Content/Js/GestorUsuarios-SaveUpdate.js"></script>
}